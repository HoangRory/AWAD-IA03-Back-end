# Example environment variables for the back-end (NestJS)
# Copy to `back-end/.env` for local development.

# Use either DATABASE_URL (preferred) OR the individual DB_* variables below.
# DATABASE_URL=postgres://user:password@localhost:5432/user_db
DATABASE_URL=postgres://postgres:250304@localhost:5432/user_db

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=250304
DB_NAME=user_db

# If true, TypeORM will synchronize the schema automatically (convenient for dev only)
TYPEORM_SYNC=true

# Frontend origin allowed by CORS (defaults to http://localhost:5173)
FRONTEND_URL=http://localhost:5173

